{
  "name": "vg-control",
  "version": "1.0.0",
  "description": "Video game control input tracking application",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "cross-env NODE_ENV=development concurrently \"npm run watch\" \"electron .\"",
    "build": "webpack --config webpack.config.js",
    "watch": "webpack --config webpack.config.js --watch",
    "bundle-python": "node scripts/bundle-python.js",
    "prepackage": "npm run bundle-python",
    "package": "electron-builder",
    "package:win": "npm run prepackage && electron-builder --win",
    "package:mac": "npm run prepackage && electron-builder --mac",
    "package:linux": "npm run prepackage && electron-builder --linux",
    "postinstall": "electron-builder install-app-deps",
    "test:packaging": "node scripts/test-packaging.js",
    "test:python": "./test-packaging.sh",
    "test:python:win": "test-packaging.bat",
    "version:patch": "node scripts/bump-version.js patch",
    "version:minor": "node scripts/bump-version.js minor",
    "version:major": "node scripts/bump-version.js major"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OpenWorld-Labs/vg_control.git"
  },
  "author": "Open World Labs",
  "license": "MIT",
  "dependencies": {
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "electron-store": "^8.1.0",
    "lucide-react": "^0.284.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.16.0",
    "tailwind-merge": "^1.14.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@babel/core": "^7.22.20",
    "@babel/preset-env": "^7.22.20",
    "@babel/preset-react": "^7.22.15",
    "@types/node": "^20.8.3",
    "@types/react": "^18.2.25",
    "@types/react-dom": "^18.2.11",
    "autoprefixer": "^10.4.16",
    "babel-loader": "^9.1.3",
    "concurrently": "^8.2.1",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "html-webpack-plugin": "^5.5.3",
    "postcss": "^8.4.31",
    "postcss-loader": "^8.1.1",
    "style-loader": "^3.3.3",
    "tailwindcss": "^3.3.3",
    "ts-loader": "^9.5.0",
    "typescript": "^5.2.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  }
}
